  { name: 'GitHub', url: 'https://github.com/redoswald', icon: 'github' },
  { name: 'LinkedIn', url: 'https://linkedin.com/in/aaronoswald', icon: 'linkedin' },
  { name: 'Twitter', url: 'https://twitter.com/yourusername', icon: 'twitter' },
  { name: 'Email', url: 'mailto:aaron@example.com', icon: 'email' },
