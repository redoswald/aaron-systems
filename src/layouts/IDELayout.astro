---
import '../styles/global.css';
import MenuBar from '../components/ide/MenuBar.astro';
import Explorer from '../components/ide/Explorer.astro';
import EditorTabs from '../components/ide/EditorTabs.astro';
import StructurePanel from '../components/ide/StructurePanel.astro';
import ConnectionsPanel from '../components/ide/ConnectionsPanel.astro';
import OutputPanel from '../components/ide/OutputPanel.astro';
import StatusBar from '../components/ide/StatusBar.astro';

interface Props {
  title: string;
  description?: string;
  headings?: { depth: number; slug: string; text: string }[];
  outputData?: any;
  currentPath?: string;
}

const {
  title,
  description = "Aaron's personal site",
  headings = [],
  outputData,
  currentPath = '/'
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet" />
    <title>{title} | AaronOS.ai</title>
    <script is:inline>
      // Prevent flash of wrong theme
      (function() {
        const saved = localStorage.getItem('theme');
        const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        if (saved === 'light' || (!saved && !prefersDark)) {
          document.documentElement.setAttribute('data-theme', 'light');
        }
      })();
    </script>
  </head>
  <body class="h-screen overflow-hidden flex flex-col">
    <!-- Desktop IDE Layout -->
    <div class="hidden md:flex md:flex-col h-full">
      <MenuBar />

      <div class="flex-1 flex overflow-hidden">
        <!-- Left sidebar: Explorer + Connections -->
        <div id="sidebar" class="flex flex-col border-r border-[var(--color-border)] overflow-hidden" style="width: 240px;">
          <Explorer currentPath={currentPath} />
          <ConnectionsPanel />
        </div>

        <!-- Sidebar Resize Handle -->
        <div id="sidebar-resize" class="sidebar-resize-handle" title="Drag to resize">
          <div class="sidebar-handle-line"></div>
        </div>

        <!-- Main area: Tabs + Editor + Output -->
        <div class="flex-1 flex flex-col overflow-hidden min-w-0" id="main-area">
          <!-- Top: Tabs + Editor + Structure -->
          <div class="flex-1 flex overflow-hidden min-h-0" id="editor-area">
            <div class="flex-1 flex flex-col overflow-hidden">
              <EditorTabs title={title} currentPath={currentPath} />
              <div class="flex-1 overflow-auto editor-content">
                <div class="prose">
                  <slot />
                </div>
              </div>
            </div>
            <StructurePanel headings={headings} />
          </div>

          <!-- Resize Handle -->
          <div id="resize-handle" class="resize-handle" title="Drag to resize">
            <div class="resize-handle-dots">
              <span></span><span></span><span></span>
            </div>
          </div>

          <!-- Bottom: Output -->
          <div id="output-wrapper" style="height: 150px;">
            <OutputPanel data={outputData} />
          </div>
        </div>
      </div>

      <StatusBar />
    </div>

    <!-- Mobile Layout -->
    <div class="md:hidden flex flex-col h-full">
      <header class="bg-[var(--color-bg-alt)] border-b border-[var(--color-border)] p-4 flex items-center justify-between">
        <a href="/" class="font-semibold text-[var(--color-text-bright)]">AaronOS.ai</a>
        <button id="mobile-menu-btn" class="p-2" aria-label="Menu">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </header>

      <nav id="mobile-menu" class="hidden bg-[var(--color-bg-panel)] border-b border-[var(--color-border)] p-4">
        <ul class="space-y-2">
          <li><a href="/" class="block py-2">Home</a></li>
          <li><a href="/blog" class="block py-2">Blog</a></li>
          <li><a href="/projects" class="block py-2">Projects</a></li>
          <li><a href="/links" class="block py-2">Links</a></li>
        </ul>
        <div class="mt-4 pt-4 border-t border-[var(--color-border)]">
          <p class="text-xs text-[var(--color-text-muted)] mb-2">Connect</p>
          <div class="flex gap-4 text-sm">
            <a href="https://github.com/redoswald" target="_blank">GitHub</a>
            <a href="https://linkedin.com/in/aaronoswald" target="_blank">LinkedIn</a>
            <a href="https://twitter.com/AaronPublicTwit" target="_blank">Twitter</a>
          </div>
        </div>
      </nav>

      <main class="flex-1 overflow-auto p-6">
        <div class="prose max-w-none">
          <slot />
        </div>
      </main>

      <footer class="bg-[var(--color-bg-alt)] border-t border-[var(--color-border)] p-4 flex items-center justify-between text-xs text-[var(--color-text-muted)]">
        <span>AaronOS.ai</span>
        <button id="mobile-theme-toggle" class="flex items-center gap-2 px-2 py-1 rounded" aria-label="Toggle theme">
          <svg id="mobile-sun-icon" class="w-4 h-4 hidden" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" clip-rule="evenodd" />
          </svg>
          <svg id="mobile-moon-icon" class="w-4 h-4" viewBox="0 0 20 20" fill="currentColor">
            <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z" />
          </svg>
        </button>
      </footer>
    </div>

    <style>
      /* Sidebar resize handle */
      .sidebar-resize-handle {
        width: 4px;
        cursor: col-resize;
        background: transparent;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: background-color 0.15s;
        flex-shrink: 0;
        position: relative;
      }

      .sidebar-resize-handle:hover,
      .sidebar-resize-handle.dragging {
        background: var(--color-bg-active);
      }

      .sidebar-handle-line {
        width: 2px;
        height: 30px;
        background: var(--color-text-muted);
        border-radius: 1px;
        opacity: 0;
        transition: opacity 0.15s;
      }

      .sidebar-resize-handle:hover .sidebar-handle-line,
      .sidebar-resize-handle.dragging .sidebar-handle-line {
        opacity: 0.5;
      }

      #sidebar {
        flex-shrink: 0;
        min-width: 120px;
        max-width: 50vw;
      }

      body.resizing-x {
        cursor: col-resize !important;
        user-select: none;
      }

      body.resizing-x * {
        cursor: col-resize !important;
      }

      /* Output panel resize handle */
      .resize-handle {
        height: 6px;
        background: var(--color-bg-alt);
        border-top: 1px solid var(--color-border);
        cursor: row-resize;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: background-color 0.15s;
        flex-shrink: 0;
      }

      .resize-handle:hover,
      .resize-handle.dragging {
        background: var(--color-bg-hover);
      }

      .resize-handle-dots {
        display: flex;
        gap: 3px;
      }

      .resize-handle-dots span {
        width: 3px;
        height: 3px;
        border-radius: 50%;
        background: var(--color-text-muted);
        opacity: 0.5;
      }

      .resize-handle:hover .resize-handle-dots span,
      .resize-handle.dragging .resize-handle-dots span {
        opacity: 0.8;
      }

      #output-wrapper {
        flex-shrink: 0;
        min-height: 32px;
        max-height: 80vh;
        overflow: hidden;
      }

      #output-wrapper > * {
        height: 100%;
      }

      body.resizing {
        cursor: row-resize !important;
        user-select: none;
      }

      body.resizing * {
        cursor: row-resize !important;
      }
    </style>

    <script>
      const menuBtn = document.getElementById('mobile-menu-btn');
      const menu = document.getElementById('mobile-menu');

      menuBtn?.addEventListener('click', () => {
        menu?.classList.toggle('hidden');
      });

      // Mobile theme toggle
      const mobileToggle = document.getElementById('mobile-theme-toggle');
      const mobileSun = document.getElementById('mobile-sun-icon');
      const mobileMoon = document.getElementById('mobile-moon-icon');

      function updateMobileIcons() {
        const isLight = document.documentElement.getAttribute('data-theme') === 'light';
        mobileSun?.classList.toggle('hidden', !isLight);
        mobileMoon?.classList.toggle('hidden', isLight);
      }

      updateMobileIcons();

      mobileToggle?.addEventListener('click', () => {
        const isLight = document.documentElement.getAttribute('data-theme') === 'light';
        if (isLight) {
          document.documentElement.removeAttribute('data-theme');
          localStorage.setItem('theme', 'dark');
        } else {
          document.documentElement.setAttribute('data-theme', 'light');
          localStorage.setItem('theme', 'light');
        }
        updateMobileIcons();
      });

      // Sidebar resize functionality
      const sidebarHandle = document.getElementById('sidebar-resize');
      const sidebar = document.getElementById('sidebar');

      if (sidebarHandle && sidebar) {
        let isResizingSidebar = false;
        let startX = 0;
        let startWidth = 0;

        // Load saved width
        const savedWidth = localStorage.getItem('sidebar-width');
        if (savedWidth) {
          sidebar.style.width = savedWidth + 'px';
        }

        sidebarHandle.addEventListener('mousedown', (e) => {
          isResizingSidebar = true;
          startX = e.clientX;
          startWidth = sidebar.offsetWidth;
          document.body.classList.add('resizing-x');
          sidebarHandle.classList.add('dragging');
          e.preventDefault();
        });

        document.addEventListener('mousemove', (e) => {
          if (!isResizingSidebar) return;

          const deltaX = e.clientX - startX;
          const newWidth = Math.min(
            Math.max(startWidth + deltaX, 120), // min width
            window.innerWidth * 0.5 // max width (50% of viewport)
          );

          sidebar.style.width = newWidth + 'px';
        });

        document.addEventListener('mouseup', () => {
          if (isResizingSidebar) {
            isResizingSidebar = false;
            document.body.classList.remove('resizing-x');
            sidebarHandle.classList.remove('dragging');

            // Save width to localStorage
            localStorage.setItem('sidebar-width', sidebar.offsetWidth);
          }
        });

        // Double-click to reset to default
        sidebarHandle.addEventListener('dblclick', () => {
          sidebar.style.width = '240px';
          localStorage.setItem('sidebar-width', 240);
        });
      }

      // Output panel resize functionality
      const resizeHandle = document.getElementById('resize-handle');
      const outputWrapper = document.getElementById('output-wrapper');
      const mainArea = document.getElementById('main-area');

      if (resizeHandle && outputWrapper && mainArea) {
        let isResizing = false;
        let startY = 0;
        let startHeight = 0;

        // Load saved height
        const savedHeight = localStorage.getItem('output-panel-height');
        if (savedHeight) {
          outputWrapper.style.height = savedHeight + 'px';
        }

        resizeHandle.addEventListener('mousedown', (e) => {
          isResizing = true;
          startY = e.clientY;
          startHeight = outputWrapper.offsetHeight;
          document.body.classList.add('resizing');
          resizeHandle.classList.add('dragging');
          e.preventDefault();
        });

        document.addEventListener('mousemove', (e) => {
          if (!isResizing) return;

          const deltaY = startY - e.clientY;
          const newHeight = Math.min(
            Math.max(startHeight + deltaY, 32), // min height
            mainArea.offsetHeight - 100 // max height (leave room for editor)
          );

          outputWrapper.style.height = newHeight + 'px';
        });

        document.addEventListener('mouseup', () => {
          if (isResizing) {
            isResizing = false;
            document.body.classList.remove('resizing');
            resizeHandle.classList.remove('dragging');

            // Save height to localStorage
            localStorage.setItem('output-panel-height', outputWrapper.offsetHeight);
          }
        });

        // Double-click to reset to default
        resizeHandle.addEventListener('dblclick', () => {
          outputWrapper.style.height = '150px';
          localStorage.setItem('output-panel-height', 150);
        });
      }
    </script>
  </body>
</html>
