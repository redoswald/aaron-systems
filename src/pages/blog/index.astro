---
import IDELayout from '../../layouts/IDELayout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog', ({ data }) => !data.draft);
const sortedPosts = posts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

const headings = [
  { depth: 1, slug: 'blog', text: 'Blog' },
  ...sortedPosts.map(post => ({
    depth: 2,
    slug: post.id,
    text: post.data.title
  }))
];
---

<IDELayout title="Blog" description="Technical writing and thoughts." currentPath="/blog" headings={headings}>
  <section>
    <h1 id="blog" class="!mt-0">Blog</h1>
    <p class="text-[var(--color-comment)] mb-8">
      -- Technical writing and thoughts on data, systems, and the occasional tangent.
    </p>

    {sortedPosts.length === 0 ? (
      <p class="text-[var(--color-text-muted)]">-- No posts yet. Check back soon.</p>
    ) : (
      <ul class="space-y-6">
        {sortedPosts.map((post) => (
          <li id={post.id}>
            <a href={`/blog/${post.id}`} class="group block">
              <h2 class="text-lg font-medium text-[var(--color-function)] group-hover:text-[var(--color-accent)] transition-colors !mt-0 !mb-1">
                {post.data.title}
              </h2>
              <p class="text-[var(--color-text-muted)]">
                {post.data.description}
              </p>
              <time class="text-sm text-[var(--color-comment)] mt-2 block">
                -- {post.data.date.toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' })}
              </time>
            </a>
          </li>
        ))}
      </ul>
    )}
  </section>
</IDELayout>
