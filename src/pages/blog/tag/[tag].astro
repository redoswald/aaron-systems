---
import IDELayout from '../../../layouts/IDELayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog', ({ data }) => !data.draft);

  // Get all unique tags
  const tags = [...new Set(posts.flatMap(post => post.data.tags || []))];

  return tags.map(tag => ({
    params: { tag },
    props: { tag },
  }));
}

const { tag } = Astro.props;

const posts = await getCollection('blog', ({ data }) => !data.draft);
const filteredPosts = posts
  .filter(post => post.data.tags?.includes(tag))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

const headings = [
  { depth: 1, slug: 'tag', text: `Tag: ${tag}` },
  ...filteredPosts.map(post => ({
    depth: 2,
    slug: post.id,
    text: post.data.title
  }))
];
---

<IDELayout title={`Tag: ${tag}`} description={`Posts tagged with "${tag}"`} currentPath={`/blog/tag/${tag}`} headings={headings}>
  <section>
    <h1 id="tag" class="!mt-0">
      <span class="text-[var(--color-text-muted)]">SELECT * FROM blog WHERE tag =</span> '{tag}'
    </h1>
    <p class="text-[var(--color-comment)] mb-8">
      -- {filteredPosts.length} post{filteredPosts.length !== 1 ? 's' : ''} found
    </p>

    {filteredPosts.length === 0 ? (
      <p class="text-[var(--color-text-muted)]">-- No posts with this tag.</p>
    ) : (
      <ul class="space-y-6">
        {filteredPosts.map((post) => (
          <li id={post.id}>
            <a href={`/blog/${post.id}`} class="group block">
              <h2 class="text-lg font-medium text-[var(--color-function)] group-hover:text-[var(--color-accent)] transition-colors !mt-0 !mb-1">
                {post.data.title}
              </h2>
              <p class="text-[var(--color-text-muted)]">
                {post.data.description}
              </p>
              <time class="text-sm text-[var(--color-comment)] mt-2 block">
                -- {post.data.date.toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' })}
              </time>
            </a>
          </li>
        ))}
      </ul>
    )}

    <div class="mt-12 pt-8 border-t border-[var(--color-border)]">
      <a href="/blog" class="text-sm text-[var(--color-accent)]">&larr; SELECT * FROM blog</a>
    </div>
  </section>
</IDELayout>
