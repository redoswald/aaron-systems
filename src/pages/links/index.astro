---
import IDELayout from '../../layouts/IDELayout.astro';
import { getCollection } from 'astro:content';

const links = await getCollection('links');
const sortedLinks = links.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

const headings = [
  { depth: 1, slug: 'links', text: 'Links' },
];
---

<IDELayout title="Links" description="Curated links with commentary." currentPath="/links" headings={headings}>
  <section>
    <h1 id="links" class="!mt-0">Links</h1>
    <p class="text-[var(--color-comment)] mb-8">
      -- Curated links to things I find interesting.
    </p>

    {sortedLinks.length === 0 ? (
      <p class="text-[var(--color-text-muted)]">-- No links yet. Check back soon.</p>
    ) : (
      <ul class="space-y-6">
        {sortedLinks.map((link) => (
          <li class="border-b border-[var(--color-border)] pb-6 last:border-0">
            <a
              href={link.data.url}
              target="_blank"
              rel="noopener noreferrer"
              class="text-lg font-medium text-[var(--color-accent)] hover:text-[var(--color-accent-hover)]"
            >
              {link.data.title} <span class="text-[var(--color-text-muted)]">&nearr;</span>
            </a>
            <time class="text-sm text-[var(--color-comment)] block mt-1">
              -- {link.data.date.toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' })}
            </time>
            {link.data.tags && link.data.tags.length > 0 && (
              <div class="flex gap-2 mt-2">
                {link.data.tags.map((tag: string) => (
                  <span class="text-xs bg-[var(--color-bg-alt)] text-[var(--color-keyword)] px-2 py-1">
                    {tag}
                  </span>
                ))}
              </div>
            )}
          </li>
        ))}
      </ul>
    )}
  </section>
</IDELayout>
