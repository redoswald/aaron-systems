---
import GardenLayout from '../layouts/GardenLayout.astro';
import Hero from '../components/garden/Hero.astro';
import Card from '../components/garden/Card.astro';
import PostList from '../components/garden/PostList.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog', ({ data }) => !data.draft);
const allProjects = await getCollection('projects', ({ data }) => !data.draft);
const books = await getCollection('books');
const films = await getCollection('films');

// Get recent posts (5 most recent, excluding library items)
const recentPosts = allPosts
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 5)
  .map(post => ({
    type: post.id.includes('linkpost') ? 'linkpost' : 'essay',
    title: post.data.title,
    date: post.data.date,
    href: `/writing/${post.id}`,
  }));

// Get featured projects
const featuredProjects = allProjects
  .filter(p => p.data.featured)
  .slice(0, 2);

// Get featured posts (two most recent essays that aren't linkposts)
const featuredPosts = allPosts
  .filter(p => !p.id.includes('linkpost'))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 2);

// Helper to get book cover
function getBookCover(book: typeof books[0]): string {
  if (book.data.cover) return book.data.cover;
  if (book.data.isbn) {
    return `https://covers.openlibrary.org/b/isbn/${book.data.isbn}-L.jpg`;
  }
  return '/covers/books/placeholder.jpg';
}

// Helper to get film poster
async function getFilmCover(film: typeof films[0]): Promise<string> {
  if (film.data.cover) return film.data.cover;
  if (film.data.tmdbId) {
    const apiKey = import.meta.env.TMDB_API_KEY;
    if (apiKey) {
      try {
        const response = await fetch(
          `https://api.themoviedb.org/3/movie/${film.data.tmdbId}?api_key=${apiKey}`
        );
        const data = await response.json();
        if (data.poster_path) {
          return `https://image.tmdb.org/t/p/w500${data.poster_path}`;
        }
      } catch (e) {
        console.error('Failed to fetch TMDB poster:', e);
      }
    }
  }
  return '/covers/films/placeholder.jpg';
}

// Get recent library items (8 most recent books/films combined)
const bookItems = books.map(book => ({
  title: book.data.title,
  subtitle: book.data.author,
  cover: getBookCover(book),
  href: `/library/books/${book.id}`,
  type: 'book' as const,
  date: book.data.dateRead,
}));

const filmItems = await Promise.all(
  films.map(async (film) => ({
    title: film.data.title,
    subtitle: film.data.director,
    cover: await getFilmCover(film),
    href: `/library/films/${film.id}`,
    type: 'film' as const,
    date: film.data.dateWatched,
  }))
);

const recentLibraryItems = [...bookItems, ...filmItems]
  .sort((a, b) => b.date.valueOf() - a.date.valueOf())
  .slice(0, 8);
---

<GardenLayout title="Home" description="Aaron Oswald - Systems thinker who specializes in data.">
  <Hero
    name="Aaron Oswald"
    tagline="Systems thinker who specializes in data."
    bio="Based in Washington, D.C. Currently a Principal Data Analyst at Capital One. When I'm not analyzing data, I write about data systems, visualization, and the occasional experiment at the intersection of technology and creativity."
    image="/me.webp"
  />

  <!-- Featured Section -->
  {(featuredProjects.length > 0 || featuredPosts.length > 0) && (
    <section class="mb-16">
      <h2 class="text-xl mb-6" style="font-family: var(--font-serif);">Featured</h2>
      <div class="grid md:grid-cols-2 gap-4">
        {featuredProjects.map(project => (
          <Card
            type="project"
            title={project.data.title}
            description={project.data.description}
            date={project.data.date}
            href={`/projects/${project.id}`}
          />
        ))}
        {featuredPosts.map(post => (
          <Card
            type="essay"
            title={post.data.title}
            description={post.data.description}
            date={post.data.date}
            href={`/writing/${post.id}`}
            tags={post.data.tags}
          />
        ))}
      </div>
    </section>
  )}

  <!-- Recent Writing -->
  {recentPosts.length > 0 && (
    <section class="mb-16">
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-xl" style="font-family: var(--font-serif);">Recent Writing</h2>
        <a href="/writing" class="text-sm text-[var(--accent)] hover:text-[var(--accent-hover)]">
          View all &rarr;
        </a>
      </div>
      <PostList posts={recentPosts} />
    </section>
  )}

  <!-- Recent from Library -->
  {recentLibraryItems.length > 0 && (
    <section class="mb-16">
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-xl" style="font-family: var(--font-serif);">Recently Read & Watched</h2>
        <a href="/library" class="text-sm text-[var(--accent)] hover:text-[var(--accent-hover)]">
          View all &rarr;
        </a>
      </div>
      <div class="grid grid-cols-4 sm:grid-cols-4 md:grid-cols-8 gap-4">
        {recentLibraryItems.map(item => (
          <a href={item.href} class="group">
            <div class="relative aspect-[2/3] overflow-hidden rounded-lg shadow-sm group-hover:shadow-lg transition-all duration-200 bg-[var(--bg-secondary)]">
              <img
                src={item.cover}
                alt={item.title}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-200"
                loading="lazy"
              />
            </div>
            <h3 class="text-xs font-medium text-[var(--text-primary)] mt-2 line-clamp-3 group-hover:text-[var(--accent)] transition-colors">
              {item.title}
            </h3>
          </a>
        ))}
      </div>
    </section>
  )}
</GardenLayout>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
